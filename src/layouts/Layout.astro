---
import { NormalizeCSS } from "../styles/normalize";
import { Global } from "@emotion/react";
import { Preview } from "@static/images";
import { Header } from "@modules/Header";
import { Footer } from "@modules/Footer";

interface Props {
    title: string;
    description: string;
}

const googleAnalyticsID = 'G-R4GEWJJ1P7';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="icon" type="image/svg+xml" href="/favicon/favicon.ico?v=2" />
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="Desarrollador web en Argentina. Portfolio de Mauricio Lores, experto en React, Node.js y TypeScript para empresas y emprendedores." />
        <meta
            name="robots"
            content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
        />
        <meta
            name="keywords"
            content="mauroDev, portfolio, portafolio,  programmer, programador, desarrollador front-end, 
            back-end, Desarrollo web, diseÃ±o web, html, css, javascript"
        />
        <meta name="color-scheme" content="light only" />
        <meta property="og:url" content="https://codewithmauricio.tech" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="MauroDev" />
        <meta property="og:image" content="http://imgfz.com/i/f17VCYT.png" />
        <meta property="og:description" content={description} />
        <meta property="og:site_name" content="Desarrollador Full Stack | MauroDev" />
        <meta property="og:locale" content="es_ES" />
        <meta name="card" content="summary_large_image" />
        <meta name="title" content="MauroDev" />
        <meta name="description" content={description} />
        <meta name="image" content={Preview.src} />
        <meta property="domain" content="codewithmauricio.tech" />
        <meta property="url" content="https://codewithmauricio.tech" />
        <link rel="canonical" href="https://www.codewithmauricio.tech/" />
        <title>Desarrollador Web Full Stack en Argentina | Mauricio Lores</title>
                <Global styles={NormalizeCSS} />
                <script type="application/ld+json">
                {JSON.stringify({
                    "@context": "https://schema.org",
                    "@type": "Person",
                    "name": "Mauricio Lores",
                    "jobTitle": "Desarrollador Web Full Stack",
                    "url": "https://codewithmauricio.tech",
                    "image": "http://imgfz.com/i/f17VCYT.png",
                    "sameAs": [
                        "https://www.linkedin.com/in/maurolores92/",
                        "https://github.com/maurolores92"
                    ]
                })}
                </script>
        <fragment set:html={`<script async src="https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsID}"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', '${googleAnalyticsID}');
        </script>`} />
        <!-- jquery and datatables.net JS removed -->
            <script>
                (function() {
                    var theme = localStorage.getItem("theme") || "dark";
                    document.body.setAttribute("data-theme", theme);
                })();
            </script>
    </head>
    <body data-theme="light">
        <Header client:load />
        <slot />
        <Footer />
    </body>
</html>
